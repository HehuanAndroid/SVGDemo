<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="njhh.svgdemo.MainActivity">
    <njhh.svgdemo.LoveLayout
        android:id="@+id/love_id"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#777777"
        android:onClick="addlove">
    </njhh.svgdemo.LoveLayout>
    
    <njhh.svgdemo.QQStepView
        android:layout_alignParentBottom="true"
        app:outerColor="@color/colorPrimary"
        app:innerColor="@color/colorAccent"
        app:borderWidth="6dp"
        app:stepTextColor="@color/colorAccent"
        app:stepTextSize="16sp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        />
</RelativeLayout>
